<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <th scope="row"></th>
            <td>{{this.name}}</td>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td><a href="/api/users/update/{{this._id}}"><i style="cursor: pointer"
                        class="fa-solid fa-pen-to-square"></i></a></td>
            <td><a href="/api/users/delete/{{this._id}}"><i style="cursor: pointer" class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>